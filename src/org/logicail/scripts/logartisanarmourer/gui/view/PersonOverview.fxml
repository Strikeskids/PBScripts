<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.logicail.scripts.logartisanarmourer.gui.PersonOverviewController">
    <children>
        <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="300.0" prefWidth="600.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="personTable" prefHeight="200.0" prefWidth="200.0"
                                   AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                                   AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                            <columns>
                                <TableColumn prefWidth="110.0" text="First Name" fx:id="firstNameColumn"/>
                                <TableColumn prefWidth="110.0" text="Last Name" fx:id="lastNameColumn"/>
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Label text="Person Details" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>
                        <GridPane prefHeight="155.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                                  AnchorPane.topAnchor="40.0">
                            <children>
                                <Label fx:id="firstNameLabel" text="Label" GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"/>
                                <Label fx:id="lastNameLabel" text="Label" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>
                                <Label fx:id="streetLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label fx:id="postalCodeLabel" text="Label" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"/>
                                <Label fx:id="cityLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label fx:id="birthdayLabel" text="Label" GridPane.columnIndex="1"
                                       GridPane.rowIndex="5"/>
                                <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                <Label text="Street" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                <Label text="Post Code" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                                <Label text="City" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                                <Label text="Birthday" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                        <HBox id="HBox" alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="10.0"
                              AnchorPane.rightAnchor="10.0">
                            <children>
                                <Button mnemonicParsing="false" text="New..."/>
                                <Button mnemonicParsing="false" text="Edit..."/>
                                <Button mnemonicParsing="false" text="Delete"/>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
